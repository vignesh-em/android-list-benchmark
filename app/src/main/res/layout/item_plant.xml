<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/box_padding"
    android:theme="@style/Theme.ListBenchmark">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorTertiaryContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="@dimen/plant_card_elevation">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/plant_image_height"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@drawable/aquilegia_coerulea" />

            <TextView
                android:id="@+id/plantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/plant_name_text_vertical_padding"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnTertiaryContainer"
                tools:text="Rocky Mountain Columbine" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>